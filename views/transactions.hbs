
<h2>Transactions Table</h2>
<table id="transactions-table">
    {{!-- Header section --}}
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{#each data}}
        <tr data-value={{this.id}}>
            <td>{{this.transactionId}}</td>
            <td>{{this.transactionOfferId}}</td>
            <td>{{this.transactionRecieverId}}</td>
            <td>{{this.transactionTime}}</td>
            <td><button onclick="updateHousehold({{this.id}})">Update</button></td>
            <td><button onclick="deleteHousehold({{this.id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{!-- Form to add a record to the table  --}}
<h2>Add or Edit a Transaction</h2>
<form id="add-person-form">
    <label for="input-transaction-offer-id">Offer Id: </label>
    <input type="number" name="input-transaction-offer-id" id="input-transaction-offer-id">
    
    <label for="input-reciever-id">Reciever Id: </label>
    <input type="number" name="input-reciever-id" id="input-reciever-id">

    <input type="submit">
</form>


