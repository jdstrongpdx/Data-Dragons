<table id="people-table">

    <h2>People Table</h2>
    {{!-- Header section --}}
    <thead>
        <tr>
            <th>Person Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Karma</th>
            <th>Update</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{#each data}}
        <tr data-value={{this.id}}>
            <td>{{this.personId}}</td>
            <td>{{this.personName}}</td>
            <td>{{this.personEmail}}</td>
            <td>{{this.personPhoneNumber}}</td>
            <td>{{this.fullAddress}}</td>
            <td>{{this.personKarma}}</td>
            <td><button onclick="loadPerson({{this.id}})">Update</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{!-- Form to add a record to the table  --}}
<h2>Add a Person</h2>
<h4 class="centered">People to Household relationship is NULLable</h4>
<form id="add-person-form-ajax">
    
    <label for="input-id">Id (Read Only): </label>
    <input type="number" name="input-id" id="input-id" readonly="readonly">

    <label for="input-name">Name: *</label>
    <input type="text" name="input-name" id="input-name" required>
    
    <label for="input-email">Email Address: *</label>
    <input type="text" name="input-email" id="input-email" required>

    <label for="input-phone-number">Phone Number: *</label>
    <input type="text" name="input-phone-number" id="input-phone-number" required>

    <label for="input-household-id">Household: </label>
    <div class="selection">
        <select name="input-household-id" id="input-household-id" required>
            <option value="">Select a Household</option>
                {{#each households}}
                <option value="{{this.householdId}}"> {{this.householdAddress}}</option>
                {{/each}}
            <option value=""></option>
        </select>
    </div>

        <label for="input-karma">Karma (Read Only): </label>
    <input type="number" name="input-karma" id="input-karma" readonly="readonly">
    
    <input type="submit" value="Add/Edit Person">
</form>


{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_person.js"></script>


<h2>Search By Name</h2>
<form id="search-html" method='GET' action='/people'>
    <label for="input-qname">Search by Name: *</label>
    <input type="text" name="qname" id="input-name-html-search" required>
    
    <input type="submit" value="Find People">
    <a href='/people'><button>Show All</button></a>
</form>