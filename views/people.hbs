
<h2>People Table</h2>
<table id="people-table">
    {{!-- Header section --}}
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            <{{/each}}>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{#each data}}
        <tr data-value={{this.id}}>
            <td>{{this.personId}}</td>
            <td>{{this.personName}}</td>
            <td>{{this.personEmail}}</td>
            <td>{{this.personPhoneNumber}}</td>
            <td>{{this.personActive}}</td>
            <td>{{this.personHouseholdId}}</td>
            <td>{{this.personKarma}}</td>
            <td><button onclick="updatePerson({{this.id}})">Update</button></td>
            <td><button onclick="deletePerson({{this.id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{!-- Form to add a record to the table  --}}
<h2>Add or Edit a Person</h2>
<form id="add-person-form">
    <label for="input-person-name">Name: </label>
    <input type="text" name="input-person-name" id="input-person-name">
    
    <label for="input-person-email">Email Address: </label>
    <input type="email" name="input-person-email" id="input-person-email">

    <label for="input-person-phone-number">Phone Number: </label>
    <input type="text" name="input-person-phone-number" id="input-person-phone-number">

    <label for="input-person-household-id">Household Id: </label>
    <input type="number" name="input-person-household-id" id="input-person-household-id">
    
    <input type="submit">
</form>
