<table id="neighborhood-table">
    <h2>Neighborhood Table</h2>
    {{!-- Header section --}}
    <thead>

        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Active</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{#each data}}
        <tr data-value={{this.id}}>
            <td>{{this.neighborhoodId}}</td>
            <td>{{this.neighborhoodName}}</td>
            <td>{{this.neighborhoodActive}}</td>
            <td><button onclick="updateNeighborhood({{this.id}})">Update</button></td>
            <td><button onclick="deleteNeighborhood({{this.id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{!-- Form to add a record to the table  --}}

<form id="add-person-form">
    <h2>Add or Edit a Neighborhood</h2>
    <label for="input-neighborhood-name">Name: </label>
    <input type="text" name="input-neighborhood-name" id="input-neighborhood-name">

    <label for="input-neighborhood-active">Active: </label>
    <input type="number" name="input-neighborhood-active" id="input-neighborhood-name">
    &nbsp;
    <input type="submit" value="Submit">
</form>

<form id="search-neighborhood-form">
    <h2>Search Neighborhood by Name</h2>
    <form id="search-person-html" method='GET' action='/'>
        <label for="input-lname">Search by Name: </label>
        <input type="text" name="lname" id="input-lname-html-search">
        
        <input type="submit" value="Submit">
        <a href='/'><button>Reset</button></a>
</form>
