<table id="neighborhood-table">
    <h2>Neighborhood Table</h2>
    {{!-- Header section --}}
    <thead>

        <tr>
            <th>Neighborhood Id</th>
            <th>Name</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{#each data}}
        <tr data-value={{this.id}}>
            <td>{{this.neighborhoodId}}</td>
            <td>{{this.neighborhoodName}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{!-- Form to add a record to the table  --}}
<h2>Add a Neighborhood</h2>
<form id="add-neighborhood-form-ajax">
    <label for="input-name">Name: *</label>
    <input type="text" placeholder = "Neighborhood Name" name="input-name" id="input-name" required>

    <input type="submit" value="Add Neighborhood">
    <input type="reset" value="Reset Form">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_neighborhood.js"></script>
