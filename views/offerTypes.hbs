
<h2>Offer Types Table</h2>
<table id="offer-type-table">
    <thead>

        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>

        {{#each data}}
        <tr data-value={{this.id}}>
            <td>{{this.offerTypeId}}</td>
            <td>{{this.offerType}}</td>
            <td><button onclick="updateHousehold({{this.id}})">Update</button></td>
            <td><button onclick="deleteHousehold({{this.id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

<h2>Add or Edit an Offer</h2>
<form id="add-person-form">
    <label for="input-offer-type">Offer Type: </label>
    <input type="text" name="input-household-address" id="input-household-address">

    <input type="submit">
</form>


