<div class="warning">
    <p>Notice: Update buttons are not currently working.  User must reload page after adding a record.</p>
</div>

<table id="offer-table">
    <h2>Offers Table</h2>
    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the phousehold-zipcode renders --}}
        <tr>
            <th>Offer Id</th>
            <th>Giver Id</th>
            <th>Item</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Cost</th>
            <th>Timestamp</th>
            <th>Offer Type</th>
            <th>Delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{#each data}}
        <tr data-value={{this.id}}>
            <td>{{this.offerId}}</td>
            <td>{{this.offerGiverId}}</td>
            <td>{{this.offerItem}}</td>
            <td>{{this.offerDescription}}</td>
            <td>{{this.offerQuantity}}</td>
            <td>{{this.offerCost}}</td>
            <td>{{this.offerTime}}</td>
            <td>{{this.offerTypeId}}</td>
            <td><button onclick="deleteOffer({{this.offerId}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_offer.js"></script>

{{!-- Form to add a record to the table  --}}
<h2>Add an Offer</h2>
<form id="add-offer-form-ajax">

    <label for="input-giver-id">Giver Id: </label>
    <div class="selection">
        <select name="input-giver-id" id="input-giver-id">
            <option value="">Select a persons username (email)</option>
            {{#each people}}
            <option value="{{this.personId}}"> {{this.personName}}</option>
            {{/each}}
        </select>
    </div>
    
    <label for="input-item">Item: </label>
    <input type="text" name="input-item" id="input-item">

    <label for="input-description">Description: </label>
    <input type="textarea" name="input-description" id="input-description">

    <label for="input-quantity">Quantity: </label>
    <input type="number" name="input-quantity" id="input-quantity">

    <label for="input-cost">Karma Cost: </label>
    <input type="number" name="input-cost" id="input-cost">

    <label for="input-type-id">Offer Type: </label>
    <div class="selection">
        <select name="input-type-id" id="input-type-id">
            <option value="">Select a Offer Type</option>
                {{#each offerTypes}}
                <option value="{{this.offerTypeId}}"> {{this.offerType}}</option>
                {{/each}}
        </select>
    </div>


    <input type="submit" value="Add Offer">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_offer.js"></script>
